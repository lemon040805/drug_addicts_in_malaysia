{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 483,
    "height": 210,
    "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/drug_addicts_in_malaysia/refs/heads/main/data/drug_categories.csv"
    },
    "params": [
        {
            "name": "Year_selection",
            "value": 2024,
            "bind": {
                "input": "range",
                "min": 2018,
                "max": 2024,
                "step": 1,
                "name": "Year:  "
            }
        }
    ],
    "mark": {
        "type": "bar",
        "stroke": "black",
        "strokeWidth": 1
    },
    "transform": [
        {
            "filter": "datum.Year == Year_selection"
        },
        {
            "calculate": "toNumber(datum.Count)",
            "as": "val"
        },
        {
            "window": [
                {
                    "op": "rank",
                    "as": "ranking"
                }
            ],
            "sort": [
                {
                    "field": "val",
                    "order": "descending"
                }
            ]
        },
        {
            "filter": "datum.ranking <= 5"
        }
    ],
    "encoding": {
        "x": {
            "field": "Count",
            "type": "quantitative",
            "title": "Drug Use",
            "scale": { "domain": [0, 120000], "clamp": true },
            "axis": {
                "labelFontSize": 12.02,
                "titleFontSize": 14,
                "titlePadding": 20
            }
        },
        "y": {
            "field": "DrugCat",
            "type": "ordinal",
            "title": null,
            "sort": {
                "field": "Count",
                "order": "descending"
            },
            "axis": {
                "labelFontSize": 12.02,
                "labelLimit": 300
            }
        },
        "color": {
            "condition": {
                "test": "datum.ranking == 1",
                "value": "#dc2626"
            },
            "value": "#ddd"
        },
        "tooltip": [
            {
                "field": "Year",
                "type": "quantitative"
            },
            {
                "field": "DrugCat",
                "title": "Drug Category",
                "type": "nominal"
            },
            {
                "field": "Count",
                "title": "Drug Use",
                "type": "quantitative",
                "format": ","
            }
        ]
    }
}