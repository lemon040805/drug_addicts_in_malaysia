{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {
        "url": "https://raw.githubusercontent.com/lemon040805/drug_addicts_in_malaysia/refs/heads/main/data/drug_over_age_groups.csv"
    },
    "facet": {
        "field": "AgeGroup",
        "type": "nominal",
        "title": "",
        "sort": [
            "Children (<15)",
            "Youth (15–24)",
            "Young Adults (25–34)",
            "Middle-aged Adults (35–54)",
            "Older Adults (55+)"
        ],
        "header": {
            "labelFontSize": 14,
            "labelFontWeight": "bold"
        }
    },
    "spec": {
        "width": 214,
        "height": 140,
        "mark": {
            "type": "line",
            "point": true
        },
        "encoding": {
            "x": {
                "field": "Year",
                "type": "ordinal",
                "title": ""
            },
            "y": {
                "field": "RatePer100k",
                "type": "quantitative",
                "title": ""
            },
            "color": {
                "condition": {
                    "test": "datum.AgeGroup === 'Young Adults (25–34)'",
                    "value": "#dc2626"
                },
                "value": "#ddd",
                "legend": null
            },
            "tooltip": [
                {
                    "field": "Year",
                    "type": "ordinal"
                },
                {
                    "field": "AgeGroup",
                    "title": "Age group"
                },
                {
                    "field": "RatePer100k",
                    "type": "quantitative",
                    "format": ".1f"
                }
            ]
        }
    },
    "resolve": {
        "scale": {
            "x": "shared"
        }
    }
}